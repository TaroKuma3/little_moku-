<h1>Faqs#index</h1>
<h1>よくある質問</h1>
<h2>カテゴリ一覧</h2>
<div id="tag_cloud">
  <% tag_cloud Faq.category_counts, %w{s m l} do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div><br>

<% @faqs.each do |faq| %>
  <ul>
    <li>
      <h3><%= link_to(faq.questions, "/faqs/#{faq.id}") %></h3>
      <%#= faq.category_list %>
      <h6>カテゴリー：<%= raw faq.category_list.map { |t| link_to t, tag_path(t)}.join(',') %></h6>
    </li>
  </ul>
<% end %>




  <% if current_user %>
    <p><%= link_to("マイページへ戻る", "/mypage")%></p>
  <% else %>
    <p><%= link_to("TOPへ戻る", "/")%></p>
  <% end %>
