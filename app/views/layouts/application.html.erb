<!DOCTYPE html>
<html>
  <head>
    <title>LittleMoku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav>
        <% if user_signed_in? %>
          <%= "#{greeting}、#{current_user.name}さん！" %>
          <span id="linkToAaacount"><%= link_to("アカウント情報", edit_user_registration_path) %></span>
          <span id="linkToLogout"><%= link_to("ログアウト", destroy_user_session_path, method: :delete) %></span>
        <% else %>
          <%= link_to 'ユーザー登録', new_user_registration_path %>
          <%= link_to 'ログイン', new_user_session_path %>
        <% end %>
      </nav>
    </header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
