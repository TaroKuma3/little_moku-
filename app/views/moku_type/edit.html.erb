<h1>Moku_type#edit</h1>
<h1>MOKUタグの編集</h1>

<%= form_with(model: @MokuType,
url: {controller: :moku_type, action: :update, user_id: current_user.id, id: @moku_type},
method: :patch,
local: true) do |f| %>

<% if @moku_type.errors.any? %>
  <% @moku_type.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>

<%= "MOKUタグ【#{@moku_type.name}】の新しい名前を教えてください" %>
<%= render "form", f:f %>
<% end %>

　
<%
=begin f.text_field :name %>
<%= f.submit "変更する" %>
<% end %>


<h3>今あるMOKUタグはこちら</h3>
<% @moku_types.each do |moku_type| %>
<ul>
  <li>
    <%= moku_type.name %>
  </li>
</ul>
<%
=end %>


<p><%= link_to("MOKUタグ一覧へ戻る", user_moku_type_index_path(@user))%></p>
